@model TeacherVm
@{
    ViewData["Title"] = "Detail";
}

<!-- =========Breadcrumb Start========= -->
<div class="breadcrumb">
    <div class="hdr">
        <h1>Teachers name</h1>
    </div>
    <div class="content">
        <a href="./index.html"> Home</a>
        <span class="fa fa-arrow-circle-right"></span>
        <span class="page">Teachers Name</span>
    </div>
</div>
<!-- =========Breadcrumb End========= -->
@foreach (var teachers in Model.Teachers)
{
    if (teachers.Id == ViewBag.TeacherId)
    {
        <section>
            <div class="container">
                <div class="left">
                    <div class="teacher">
                        <img src="@teachers.ImagePath" alt="">
                        <h4>
                            <a href="#">@teachers.FullName</a>
                        </h4>
                        <h5>@teachers.Position</h5>
                        <div class="icons">
                            <i class="fa-brands fa-twitter" style="color: #6095f0;"></i>
                            <i class="fa-brands fa-facebook-f" style="color: #6095f0;"></i>
                            <i class="fa-brands fa-google-plus-g" style="color: #6095f0;"></i>
                            <i class="fa-brands fa-pinterest" style="color: #6095f0;"></i>
                        </div>
                    </div>
                </div>
                <div class="right">
                    <div class="courses">
                        <h5>Courses Handling</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="bg-warning" scope="col">COURSE NAME</th>
                                    <th class="bg-warning" scope="col">CURRICULUM(S)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in teachers.Courses)
                                {
                                    <tr class="table-active">
                                    <td>
                                        <a asp-controller="Course" asp-action="Detail" asp-route-id="@course.Id">
                                            @course.Title
                                        </a>
                                    </td>
                                    <td>@course.Type</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    }
}


